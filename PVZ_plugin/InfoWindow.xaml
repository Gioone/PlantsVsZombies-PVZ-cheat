<Window x:Class="PVZ_plugin.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PVZ_plugin"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="InfoWindow" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
            <StackPanel HorizontalAlignment="Center" Margin="10" Orientation="Horizontal">
                <Label x:Name="lblInfo">Information</Label>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Click="Confirm_Click" x:Name="confirm">Confirm</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
